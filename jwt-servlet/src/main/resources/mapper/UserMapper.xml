<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.kwseeker.jwtservlet.dao.UserMapper">
    <resultMap id="BaseResultMap" type="top.kwseeker.jwtservlet.pojo.User">
        <constructor>
            <idArg column="id" javaType="java.lang.Integer" jdbcType="INTEGER" />
            <arg column="username" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="password" javaType="java.lang.String" jdbcType="VARCHAR" />
        </constructor>
    </resultMap>
    <sql id="Base_Column_List">
        id, username, password
    </sql>

    <insert id="insertUser" parameterType="top.kwseeker.jwtservlet.pojo.User">
      insert into sso_user (id, username, password)
      values (#{id}, #{username}, #{password})
    </insert>

    <select id="countUserByName" parameterType="string" resultType="int">
        select count(1) from sso_user
        where username = #{username}
    </select>

    <select id="selectUserByName" parameterType="string" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from sso_user
        where username = #{username}
    </select>
</mapper>
